# RAG Service Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Default LLM Provider: lmstudio, gemini, or openai
# =============================================================================
RAG_DEFAULT_PROVIDER=lmstudio

# =============================================================================
# LM Studio Configuration (Local)
# =============================================================================
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_MODEL=local-model
LMSTUDIO_MAX_TOKENS=4096
LMSTUDIO_TEMPERATURE=0.7
LMSTUDIO_TIMEOUT=120.0

# =============================================================================
# Google Gemini Configuration
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# =============================================================================
# OpenAI-Compatible Configuration
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# =============================================================================
# Qdrant Vector Database
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=fatwas
QDRANT_API_KEY=

# =============================================================================
# Embedding Model
# =============================================================================
EMBEDDING_MODEL_NAME=Omartificial-Intelligence-Space/GATE-AraBert-v1
EMBEDDING_DEVICE=gpu
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# Retrieval Settings
# =============================================================================
RETRIEVAL_TOP_K=5
RETRIEVAL_SIMILARITY_THRESHOLD=0.5
RETRIEVAL_RERANK=true
RETRIEVAL_RERANK_MODEL=D:\_hsproject\nlp project\testing\model\Namaa-ARA-Reranker-V1

# =============================================================================
# Citation Settings
# =============================================================================
CITATION_FORMAT=islamic_scholarly
CITATION_INCLUDE_INLINE=true
CITATION_INCLUDE_REFERENCES=true
CITATION_INCLUDE_CONFIDENCE=true

# =============================================================================
# Logging & Safety
# =============================================================================
RAG_LOG_LEVEL=INFO
RAG_ENABLE_SAFETY_CHECKS=true
